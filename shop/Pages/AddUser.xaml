<Window x:Class="shop.Pages.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shop.Pages"
        mc:Ignorable="d"
        Height="300" Width="200"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:col="clr-namespace:System.Collections;assembly=mscorlib" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>

        <StackPanel>

            <Label Content="Добавить" HorizontalAlignment="Center" FontSize="15"/>
            <TextBox x:Name="boxlogin" materialDesign:HintAssist.Hint="Логин" Style="{StaticResource MaterialDesignFloatingHintTextBox}"  FontSize="14"/>
            <TextBox x:Name="boxname" materialDesign:HintAssist.Hint="ФИО" Style="{StaticResource MaterialDesignFloatingHintTextBox}"  FontSize="14"/>
            <TextBox x:Name="boxnum" materialDesign:HintAssist.Hint="Телефон" Style="{StaticResource MaterialDesignFloatingHintTextBox}"  FontSize="14"/>
            <Button Content="Добавить" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Add_Button" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
